{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  // General configuration
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    ":prHourlyLimitNone",
    ":automergePatch",
    ":automergeMinor",
    ":preserveSemverRanges"
  ],

  "schedule": ["after 3am and before 9am every weekday"],

  "vulnerabilityAlerts": {
    "labels": ["security"]
  },

  "assignees": ["Okabe-Junya"],

  "labels": ["dependencies", "renovate", "bot", "release: none"],

  "dependencyDashboard": true,

  "patch": {
    "groupName": "renovate-patch"
  },

  "packageRules": [
    {
      "matchUpdateTypes": ["pin"],
      "addLabels": ["pin"]
    },
    {
      "matchUpdateTypes": ["major"],
      "addLabels": ["chore: major"]
    },
    {
      "matchUpdateTypes": ["minor"],
      "addLabels": ["chore: minor"]
    },
    {
      "matchUpdateTypes": ["patch"],
      "addLabels": ["chore: patch"]
    },
    {
      "commitMessageTopic": "Node.js",
      "excludePackageNames": [
        "calico/node",
        "kindest/node"
      ],
    "matchDatasources": [
      "docker"
    ],
    "matchDepNames": [
      "node"
    ],
    "matchPackagePatterns": [
      "/node$"
    ]
    }
  ],

  "regexManagers": []
}
